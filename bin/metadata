var minipaas = require('../');
var argv = require('minimist')(process.argv.slice(2));

minipaas.services(argv['_']).then(
    function (data) {
        if (data.length) {
            data.map(minipaas.info);
        } else {
            console.log("No matches.");
        }
    },
    function (err) {
        console.log("ERROR:", err);
    });

